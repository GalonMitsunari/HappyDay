{# templates/birthday/add.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Ajouter un anniversaire{% endblock %}

{% block body %}
    <h1>Ajouter un anniversaire</h1>

    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.prenom) }}
        {{ form_row(form.dateAnniversaire, {
            'widget': 'single_text',
            'attr': {'class': 'js-datepicker'},
            'html5': false,
            'format': 'dd/MM/yyyy',
        }) }}
        <button type="submit" class="btn btn-primary">Ajouter</button>
    {{ form_end(form) }}
{% endblock %}
